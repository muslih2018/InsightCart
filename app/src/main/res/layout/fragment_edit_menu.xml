<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- Top Header -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/Purple1"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/headerInput">

        <ImageView
            android:contentDescription="@string/back"
            android:id="@+id/Profile_Icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.036"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow2" />

        <TextView
            android:id="@+id/Menu"
            android:layout_width="113dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:text="@string/edit_menu"
            android:textAlignment="center"
            android:textColor="@color/White1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toEndOf="@+id/Profile_Icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--- Content Field -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="707dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="81dp">


        <TextView
            android:id="@+id/edit_menu_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_menu"
            android:textColor="@color/Purple1"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="67dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_edit_menu"
            android:layout_width="354dp"
            android:layout_height="62dp"
            android:layout_margin="0dp"
            android:autofillHints="password"
            android:background="@drawable/field_type_radius"
            android:ems="10"
            android:hint="@string/field_menu_1"
            android:inputType="textLongMessage"
            android:paddingHorizontal="20dp"
            android:paddingVertical="0dp"
            android:textColor="@color/navi"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="93dp" />

        <TextView
            android:id="@+id/edit_ingridient_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_ingridient"
            android:textColor="@color/Purple1"
            tools:layout_editor_absoluteX="30dp"

            tools:layout_editor_absoluteY="204dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_edit_ingridient"
            android:layout_width="165dp"
            android:layout_height="59dp"
            android:layout_margin="0dp"
            android:autofillHints="password"
            android:background="@drawable/field_type_radius"
            android:drawableEnd="@drawable/arrow_down"
            android:ems="10"
            android:hint="@string/field_menu_2"
            android:inputType="textLongMessage"
            android:paddingHorizontal="20dp"
            android:paddingVertical="0dp"
            android:textColor="@color/navi"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="240dp" />

        <TextView
            android:id="@+id/edit_quantities_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/berat"
            android:textColor="@color/Purple1"
            tools:layout_editor_absoluteX="223dp"

            tools:layout_editor_absoluteY="204dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_quantities_field"
            android:layout_width="92dp"
            android:layout_height="54dp"
            android:layout_margin="0dp"
            android:autofillHints="quantities"
            android:background="@drawable/field_type_radius"
            android:contentDescription="@string/Satuan_description"
            android:ems="10"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:paddingVertical="0dp"
            android:textColor="@color/navi"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="223dp"
            tools:layout_editor_absoluteY="241dp" />

        <ImageButton
            android:id="@+id/add_plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/add_rectangle_button"
            app:srcCompat="@drawable/add_rectangle"
            tools:layout_editor_absoluteX="334dp"
            tools:layout_editor_absoluteY="240dp" />

        <TextView
            android:id="@+id/edit_harga_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_harga_menu"
            android:textColor="@color/Purple1"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="339dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_edit_harga_menu"
            android:layout_width="354dp"
            android:layout_height="62dp"
            android:layout_margin="0dp"
            android:autofillHints="price/harga"
            android:background="@drawable/field_type_radius"
            android:ems="10"
            android:hint="@string/field_menu_3"
            android:inputType="textLongMessage"
            android:paddingHorizontal="20dp"
            android:paddingVertical="0dp"
            android:textColor="@color/navi"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="374dp" />

        <Button
            android:id="@+id/input_Button"
            android:layout_width="348dp"
            android:layout_height="57dp"
            android:background="@drawable/action_button"
            android:text="@string/input_action"
            android:textColor="@color/White2"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="464dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>